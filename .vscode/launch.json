{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
      "name": "Launch Cortex-M Debugger",
      "executable": "${workspaceFolder}/build/dma_baremetal.elf",
      "request": "launch",
      "type": "cortex-debug",
      "servertype": "openocd",
      "interface": "swd",
      "runToEntryPoint": "main",
      "gdbTarget": "host.docker.internal:50000",
      "showDevDebugOutput": "parsed",
      "svdFile": "${workspaceFolder}/STM32F303.svd",
      "configFiles": [
        "board/st_nucleo_f3.cfg"
      ],
      "preLaunchCommands": [
        "monitor reset"
      ],
      "postLaunchCommands": [
        "monitor reset init"
      ],
      "liveWatch": {
        "enabled": true,
        "samplesPerSecond": 4
      }
    }
    ]
}