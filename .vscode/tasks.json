{
  "version": "2.0.0",
  "tasks": [
     {
            "label": "Configure CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G", "Unix Makefiles",
                "-S", ".",
                "-B", "build",
                // "-DBUILD_TESTS=ON",  
                "-DCMAKE_BUILD_TYPE=Debug",
                // "-DUSE_BITMAP_ALLOCATOR=ON",
                "-DCMAKE_TOOLCHAIN_FILE=${workspaceFolder}/arm-none-eabi-gcc.cmake"
            ],
            "icon": { "id": "tools" },
        },
        {
            "label": "Compile",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--verbose"
            ],
            "icon": { "id": "gear" },
        },
    {
      "label": "Flash Device",
      "type": "shell",
      "command": "openocd",
      "args": [
        "-f", "board/st_nucleo_f3.cfg",
        "-c", "init",
        "-c", "reset init",
        "-c", "flash write_image erase ./build/dma_baremetal.elf",
        "-c", "reset run",
        "-c", "shutdown"
      ],
      "icon": {
        "id": "export",
        "color": "terminal.ansiMagenta"
      },
      "options": {
        "statusbar": {
          "color" : "#ffa9f8"
        }
      },
    }
  ]
}