{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Project",
      "type": "shell",
      "command": "make",
      "args": [
        "-C", "${workspaceFolder}/build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "icon": {
        "id": "terminal-build",
        "color": "terminal.ansiGreen"
      },
      "options": {
        "statusbar": {
          "color" : "#a8f8a8"
        }
      }
    },
    {
      "label": "Flash Device",
      "type": "shell",
      "command": "openocd",
      "args": [
        "-f", "board/st_nucleo_f3.cfg",
        "-c", "init",
        "-c", "reset init",
        "-c", "flash write_image erase ./build/dma_baremetal.elf",
        "-c", "reset run",
        "-c", "shutdown"
      ],
      "icon": {
        "id": "export",
        "color": "terminal.ansiMagenta"
      },
      "options": {
        "statusbar": {
          "color" : "#ffa9f8"
        }
      },
    }
  ]
}